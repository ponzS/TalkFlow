# Relay server configuration for local testing
RELAY_PORT=8765
RELAY_PATH=public
RELAY_QR=true
RELAY_HOST=
FORCE_HTTPS=false
RELAY_HTTPS=false

# Prefer local embedded STUN/TURN first
PREFER_LOCAL_TURN=true
# Enable embedded STUN/TURN (UDP on same numeric port by default)
TURN_ENABLE=true
STUN_TURN_ENABLE=true
# Public IP or hostname used in ICE URLs (leave empty to use RELAY_HOST/ip.address())
TURN_PUBLIC_IP=
# UDP listening port for TURN/STUN (default 8765 to share single domain/port)
TURN_PORT=8765
# Optional TCP TURN port (disabled if empty)
TURN_TCP_PORT=
# Relay (media) port range for TURN allocations
TURN_MIN_PORT=49160
TURN_MAX_PORT=49200
# TURN realm and static credentials (optional; without credentials we only expose STUN)
TURN_REALM=local
TURN_USERNAME=
TURN_CREDENTIAL=

# If you have external STUN/TURN, you can override with these (comma-separated)
# STUN_URLS=stun:your.turn.host:3478
# TURN_URLS=turn:your.turn.host:3478?transport=udp,turn:your.turn.host:3478?transport=tcp
# TURN_USERNAME=youruser
# TURN_CREDENTIAL=yourpass